<article class="speakerslist">
  <section class="layout">
    <div class="speakers">
      <% artists.forEach(function(item){ %>


      <article class="artist group">
        <h3><%= item.title %><span class="small">with
          <a href="http://rouxme.herokuapp.com/images/speakers/<%= item.shortname %>">
            <% item.name %>    
          </a>
        </span></h3>
        <p>
          <a href="http://rouxme.herokuapp.com/images/speakers/<% item.shortname %>">
            <img src="http://rouxme.herokuapp.com/images/speakers/<%= item.shortname %>.jpg" alt="photo of <%= item.name %>"></a>

          <%  if (page!= 'home'){ %>
            <%  if (page === 'artistList'){ %>
              <%= item.summary %>

          <%  } else{ %>
                <%- item.description %>
          <%}%>
        <%}%>

          
        </p>
      </article>
     <% }); %>
    </div>
  </section>
</article>